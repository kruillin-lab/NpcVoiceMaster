<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net10.0-windows</TargetFramework>
		<Platforms>x64;AnyCPU</Platforms>

		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<LangVersion>latest</LangVersion>

		<!-- Outputs -->
		<BaseOutputPath>bin\</BaseOutputPath>
		<OutputPath>bin\$(Platform)\$(Configuration)\</OutputPath>

		<AssemblyName>NpcVoiceMaster</AssemblyName>
		<RootNamespace>NpcVoiceMaster</RootNamespace>

		<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>

		<DalamudApiLevel>14</DalamudApiLevel>
	</PropertyGroup>

	<!-- Local references (no nuget.dalamud.dev needed) -->
	<ItemGroup>
		<Reference Include="Dalamud">
			<HintPath>C:\Users\kruil\AppData\Roaming\XIVLauncher\addon\Hooks\dev\Dalamud.dll</HintPath>
			<Private>false</Private>
		</Reference>

		<Reference Include="Dalamud.Bindings.ImGui">
			<HintPath>C:\Users\kruil\AppData\Roaming\XIVLauncher\addon\Hooks\dev\Dalamud.Bindings.ImGui.dll</HintPath>
			<Private>false</Private>
		</Reference>
	</ItemGroup>

	<!-- nuget.org packages only -->
	<ItemGroup>
		<PackageReference Include="NAudio" Version="*" />
	</ItemGroup>

	<ItemGroup>
		<None Include="NpcVoiceMaster.json">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
	</ItemGroup>

</Project>
